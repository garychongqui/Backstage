{
  "name": "midterm_template",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.0",
    "autoprefixer": "^10.0.4",
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.23.0",
    "concurrently": "^5.3.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.0",
    "file-saver": "^2.0.2",
    "html2canvas": "^1.0.0-rc.7",
    "jsonwebtoken": "^8.5.1",
    "jspdf": "^2.1.1",
    "jspdf-autotable": "^3.5.13",
    "moment": "^2.29.1",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.15",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "postcss": "^8.1.10",
    "sweetalert": "^2.1.2",
    "tailwindcss": "^2.0.1",
    "use-clipboard-hook": "^1.1.1",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && yarn run start",
    "dev": "concurrently --kill-others-on-fail \"yarn run server\" \"yarn run client\"",
    "heroku-postbuild": "cd client && yarn && yarn run build",
    "prettify": "prettier '*/**/*.js' '*/**/*.jsx' '*/**/*.html' '*/**/*.css' --write",
    "build:css": "cd client && yarn run build:css"
  }
}
